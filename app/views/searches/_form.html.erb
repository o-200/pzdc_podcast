<div class="dropdown">
  <%= form_with url: search_path,
                method: :post,
                class: 'dropdown-item',
                data: { controller: "debounce", debounce_target: "form" } do |form| %>
    <%= form.search_field :title_search,
      class: "form-control",
      data: { action: "input->debounce#search" }%>
    <%= form.hidden_field :entity_name, value: entity_name %>
  <% end %>

</div>